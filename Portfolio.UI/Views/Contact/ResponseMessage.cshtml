@model Portfolio.UI.CustomeModel.ResponseMessage
@{
    ViewData["Title"] = "ResponseMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Geri Bildirim işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form asp-action="ResponseMessage">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni mesaj Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Message"> Geri Bildirim</label>
								<textarea rows="5" class="form-control" asp-for="Message" id="Message"></textarea>
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary"> Mesajı gönder</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

