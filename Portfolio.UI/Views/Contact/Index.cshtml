@model List<Portfolio.Helper.Dtos.ContactDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesajlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Mesaj Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Portfolio Mesaj alanı
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Konu</th>
									<th scope="col">İsim Soyisim</th>
									<th scope="col">Mesaj</th>
									<th scope="col">Email</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Subject</td>
										<td>@item.NameSurname</td>
										<td>@item.Mesaage</td>
										<td>@item.Email</td>
										<td><a href="/Contact/DeleteContact/@item.ID" class="btn btn-outline-danger">Sil</a></td>
									</tr>
								}

							</tbody>
						</table>
						@* <a href="/Contact/CreateContact" class="btn btn-outline-primary">Yeni Proje Yazısı Girişi</a> *@
					</div>
				</div>

			</div>

		</div>
	</div>
</div>


