@model List<Portfolio.Helper.Dtos.ProjectDetailDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Portfolio  İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Proje Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Portfolio proje alanı
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori</th>
									<th scope="col">Müşteri</th>
									<th scope="col">Proje Url</th>
									<th scope="col">Başlık adı</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Category</td>
										<td>@item.Client</td>
										<td>@item.ProjectUrl</td>
										<td>@item.Header</td>
										<td>@item.Description</td>
										<td><a href="/ProjectDetail/DeleteProjectDetail/@item.ID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/ProjectDetail/UpdateProjectDetail/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						@* <a href="/Project/CreateProject" class="btn btn-outline-primary">Yeni Proje Yazısı Girişi</a> *@
					</div>
				</div>

			</div>

		</div>
	</div>
</div>


