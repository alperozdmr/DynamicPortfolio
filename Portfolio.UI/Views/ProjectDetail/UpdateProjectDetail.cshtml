@model Portfolio.Helper.Dtos.ProjectDetailDto
@{
    ViewData["Title"] = "UpdateProjectDetail";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Projet Detayı işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni ProjeDetayı Girişi</div>
						</div>
						<input type="hidden" asp-for="ID" />
						<div class="card-body">
							<div class="form-group">
								<label for="Category">Kategori Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="Category" id="Category">
							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Client">Müşteri adı Giriniz</label>
								<input type="text" class="form-control" asp-for="Client" id="Client">
							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ProjectUrl">Proje Url Giriniz</label>
								<input type="url" class="form-control" asp-for="ProjectUrl" id="ProjectUrl">
							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="title">Başlığı Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="Header" id="title">
							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description"> Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="Description" id="description"></textarea>
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">ProjeDetayı ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


