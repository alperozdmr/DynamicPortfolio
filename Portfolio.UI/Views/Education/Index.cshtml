@model List<Portfolio.UI.Dtos.EducationDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Eğitim  İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Eğitiö Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Eğitim alanı  ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Bölüm</th>
									<th scope="col">Okul</th>
									<th scope="col">Yıl Aralığı</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Degree</td>
										<td>@item.University</td>
										<td>@item.Year</td>
										<td>@item.Description</td>
										<td><a href="/Education/DeleteEducation/@item.ID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Education/UpdateEducation/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Education/CreateEducation" class="btn btn-outline-primary">Yeni Eğitim Bilgisi Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

