@model Portfolio.UI.Dtos.EducationDto
@{
    ViewData["Title"] = "CreateEducation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Eğitim işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Eğitim Bilgisi Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Degree">Bölüm Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="Degree" id="Degree">
							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Year">Yıl Aralığı Giriniz</label>
								<input type="text" class="form-control" asp-for="Year" id="Year">
							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="University">Okul Giriniz</label>
								<input type="text" class="form-control" asp-for="University" id="University">
							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description"> Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="Description" id="description"></textarea>
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Eğitim Bilgisi ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
