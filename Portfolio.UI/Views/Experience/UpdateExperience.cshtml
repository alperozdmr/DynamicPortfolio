@model Portfolio.UI.Dtos.ExperienceDto
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Tecrübe işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Tecrübe Girişi</div>
						</div>
						<input type="hidden" asp-for="ID" />
						<div class="card-body">
							<div class="form-group">
								<label for="title">Title Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Company">Şirket adı Giriniz</label>
								<input type="text" class="form-control" asp-for="Company" id="Company">
							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Responsibilities"> Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="Responsibilities" id="Responsibilities"></textarea>
							</div>

						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Age">Zaman aralığı Giriniz</label>
								<input type="Duration" class="form-control" asp-for="Duration" id="Duration">
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Tecrübe ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


