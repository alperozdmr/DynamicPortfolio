@model List<Portfolio.UI.Dtos.ExperienceDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Tecrübe  İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Tecrübe Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Tecrübe alanı  ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Title</th>
									<th scope="col">Şirket</th>
									<th scope="col">Zaman Aralığı</th>
									<th scope="col">Görevler</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Company</td>
										<td>@item.Duration</td>
										<td>@item.Responsibilities</td>
										<td><a href="/Experience/DeleteExperience/@item.ID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Experience/UpdateExperience/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Experience/CreateExperience" class="btn btn-outline-primary">Yeni Tecrübe Yazısı Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

