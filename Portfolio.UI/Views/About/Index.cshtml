@model List<Portfolio.Helper.Dtos.AboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Hakkımızda  İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alanı  ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.Sadece bir tane Hakkımızda alanı
							oluşturmayı unutmayın
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık adı</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Yaş</th>
									<th scope="col">Şehir</th>
									<th scope="col">Derece</th>
									<th scope="col">Telefon</th>
									<th scope="col">Web Sites</th>
									<th scope="col">Mail</th>
									<th scope="col">Fotoğraf</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.Age</td>
										<td>@item.City</td>
										<td>@item.Degree</td>
										<td>@item.Phone</td>
										<td>@item.Website</td>
										<td>@item.Email</td>
										<td><img src="@item.Image" width="100" height="100" /></td>
										<td><a href="/About/DeleteAbout/@item.ID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/About/CreateAbout" class="btn btn-outline-primary">Yeni Hakkında Yazısı Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>


