@model Portfolio.Entity.concrete.ImageList
@{
    ViewData["Title"] = "CreateImageList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Görsel işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post" enctype="multipart/form-data">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Görsel Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								@* <label for="title">Image url Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="title"> *@
								<label class="control-label">Resim</label>
								<input asp-for="ImageUrl" type="file" name="ImageFile" class="form-control" />
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-primary">Proje ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


